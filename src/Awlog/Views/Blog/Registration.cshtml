@model Awlog.Models.RegForm
@{
    ViewData["Title"] = "Registration";
}
<div class="row">
    <img src="/images/banner1.svg" alt="..." class="img-circle">
    <div class="row">
        <form asp-antiforgery="true" asp-controller="Blog" asp-action="Registration" role="form">

            <div class="form-group">
                <label asp-for="Login"></label>
                <input class="form-control" asp-for="Login" id="login" placeholder="Enter login" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input class="form-control" asp-for="Password" id="password" placeholder="Enter password" />
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name" id="name" placeholder="Enter name" />
            </div>
            <div class="form-group">
                <label asp-for="Surname"></label>
                <input class="form-control" asp-for="Surname" id="surname" placeholder="Enter surname" />
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input class="form-control" asp-for="Email" id="email" placeholder="Enter email" />
            </div>
            <button type="submit" class="btn btn-default">Отправить</button>
        </form>
    </div>
</div>
